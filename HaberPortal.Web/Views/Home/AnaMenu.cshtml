@model IEnumerable<HaberPortal.Domain.DomainModel.Kategori>
@{
    var anaKategoriler = Model.Where(x => x.AnaMenu).OrderByDescending(x => x.SiraNo);
    var altKategoriler = Model.Where(x => !x.AnaMenu).OrderByDescending(x => x.SiraNo);
}
<ul>
    @foreach (var anaKategori in anaKategoriler)
    {
        <li>@Html.ActionLink(anaKategori.Ad.ToUpper(), "KategoriDetay", "Kategori", new { id = anaKategori.Id }, null)
        </li>
    }
    <li class="diger"><a href="#">DİĞER</a>
        <ul class="alt_menu">
            @foreach (var altKategori in altKategoriler)
            {
                <li>@Html.ActionLink(altKategori.Ad.ToUpper(), "KategoriDetay", "Kategori", new { id = altKategori.Id }, null)
                </li>
            }
        </ul>
    </li>
</ul>
