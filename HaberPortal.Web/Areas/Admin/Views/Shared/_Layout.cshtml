<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Reset/css")
    @Styles.Render("~/Admin/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/chosen-master/chosen/chosen.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/chosen-master/chosen/chosen.jquery.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Scripts/Admin/Admin.js")"></script>
    <script src="@Url.Content("~/Content/JqueryEasyUi.1.3.2/jquery.easyui.min.js")"></script>
    <link href="@Url.Content("~/Content/JqueryEasyUi.1.3.2/themes/bootstrap/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/JqueryEasyUi.1.3.2/themes/icon.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/tinymce/js/tinymce/tinymce.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.1.1.min.js")"></script>
    
    <script type="text/javascript">
        var app_root = '@Url.Content("~/")';
    </script>
</head>
<body>
    <header id="header">
        <div id="banner">
            @Html.ActionLink("Ana Sayfa", "Index", "Home", new { area = "" }, null)
        </div>
    </header>
    <div id="body">
        <nav id="menu">
            <ul>
                <li>@Html.ActionLink("Haberler", "Haberler", "Haber", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Kategoriler", "Kategoriler", "Kategori", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Galeriler", "Galeriler", "Galeri", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Yorumlar", "Yorumlar", "Yorum", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Etiketler", "Etiketler", "Etiket", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Kullanıcılar", "Kullanicilar", "Kullanici", new { area = "Admin" }, null)
                </li>
                <li>@Html.ActionLink("Roller", "Roller", "Rol", new { area = "Admin" }, null)
                </li>
            </ul>
        </nav>
        <div id="content">
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        footer
    </footer>

</body>
</html>
